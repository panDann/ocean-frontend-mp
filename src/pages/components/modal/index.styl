@import '~@src/styles/variables'

.modal-container 
    // margin-top: 3re
    text-align: center
    background: #fff
    height 50vh
    width: 70vw
    border-radius: .2rem
    padding-bottom: 2.5rem
    .modal-title 
        color #666
        padding: .6rem 0
    .modal-close 
        position fixed
        left: 0
        right 0
        bottom: 3rem
        color: white
        font-size: 1.5rem
    .modal-bottom
        border-top: solid 1px $lightGrey
        padding: .6rem 0
        color: $primaryColor
        bottom: 0

        
    
